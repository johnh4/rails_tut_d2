<div class="row">
	<aside class="span4">
		<section>
			<%= gravatar_for @user %>
			<h1><%= @user.name %></h1>
		</section>
		<section>

		</section>
	</aside>
	<div class="span8">
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<% if @user.microposts.any? %>
			<ul class="microposts">
				<%= render @microposts %>
			</ul>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>